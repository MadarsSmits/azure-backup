{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sr_name": {
            "type": "string",
            "defaultValue": "valis2-BSR"
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "azureadmin",
            "metadata": {
                "description": "Username for the Virtual Machine."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine."
            }
        },
        "WindowsOSVersion": {
            "type": "string",
            "defaultValue": "2016-Datacenter",
            "metadata": {
                "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version."
            }
        },
        "LinuxOSVersion": {
            "type": "string",
            "defaultValue": "18.04-LTS",
            "metadata": {
                "description": "The Linux version for the VM. This will pick a fully patched image of this given Linux version."
            }
        },
        "VeeamVersion": {
            "type": "string",
            "defaultValue": "veeamcloudcconnectenterprise"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS"
        }
    },
    "variables": {
        "nicName1": "s1-Lin-NIC",
        "nicName2": "s1-Win-NIC",
        "nicName4": "s3-Veeam-NIC",
        "nicName6": "s5-DC-NIC",
        "nicName7": "s5-Backup-NIC",
        "addressPrefix": "10.2.0.0/16",
        "subnetName": "Subnet",
        "subnetPrefix": "10.2.0.0/24",
        "publicIPAddressName1": "s1-Lin-PublicIP",
        "publicIPAddressName2": "s1-Win-PublicIP",
        "publicIPAddressName4": "s3-Veeam-PublicIP",
        "publicIPAddressName6": "s5-DC-PublicIP",
        "publicIPAddressName7": "s5-Backup-PublicIP",
        "vmName1": "s1-Lin-VM",
        "vmName2": "s1-Win-VM",
        "vmName4": "s3-Veeam-VM",
        "vmName6": "s5-DC-VM",
        "vmName7": "s5-Backup-VM",
        "virtualNetworkName": "valis2-VNET",
        "nsgName": "valis2-NSG",
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]",
        "storageAccountName": "[concat(uniquestring(resourceGroup().id), 'restore')]"
    },
    "resources": [
        {
            "apiVersion": "2018-01-10",
            "name": "[parameters('sr_name')]",
            "location": "[resourceGroup().location]",
            "type": "Microsoft.RecoveryServices/vaults",
            "sku": {
                "name": "RS0",
                "tier": "Standard"
            },
            "properties": {}
        },
        {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[variables('nsgName')]",
        "location": "[parameters('location')]",
        "apiVersion": "2017-06-01",
        "properties": {
            "securityRules": [
                {
                    "name": "RDP_In",
                    "properties": {
                        "description": "Allows RDP traffic",
                        "protocol": "Tcp",
                        "sourcePortRange": "*",
                        "destinationPortRange": "3389",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 100,
                        "direction": "Inbound"
                    }
                },
                {
                    "name": "RDP_Out",
                    "properties": {
                        "description": "Allows RDP traffic",
                        "protocol": "Tcp",
                        "sourcePortRange": "*",
                        "destinationPortRange": "3389",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 110,
                        "direction": "Outbound"
                    }
                },
                {
                    "name": "SSH_In",
                    "properties": {
                        "description": "Allows SSH traffic",
                        "protocol": "Tcp",
                        "sourcePortRange": "*",
                        "destinationPortRange": "22",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 120,
                        "direction": "Inbound"
                    }
                },
                {
                    "name": "SSH_Out",
                    "properties": {
                        "description": "Allows SSH traffic",
                        "protocol": "Tcp",
                        "sourcePortRange": "*",
                        "destinationPortRange": "22",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 130,
                        "direction": "Outbound"
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('publicIPAddressName1')]",
        "location": "[parameters('location')]",
        "properties": {
            "publicIPAllocationMethod": "Dynamic"
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('publicIPAddressName2')]",
        "location": "[parameters('location')]",
        "properties": {
            "publicIPAllocationMethod": "Dynamic"
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('publicIPAddressName4')]",
        "location": "[parameters('location')]",
        "properties": {
            "publicIPAllocationMethod": "Dynamic"
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('publicIPAddressName6')]",
        "location": "[parameters('location')]",
        "properties": {
            "publicIPAllocationMethod": "Dynamic"
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('publicIPAddressName7')]",
        "location": "[parameters('location')]",
        "properties": {
            "publicIPAllocationMethod": "Dynamic"
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[variables('virtualNetworkName')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]"
        ],
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "[variables('addressPrefix')]"
                ]
            },
            "subnets": [
                {
                    "name": "[variables('subnetName')]",
                    "properties": {
                        "addressPrefix": "[variables('subnetPrefix')]",
                        "networkSecurityGroup": {
                            "id": "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]"
                        }
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('nicName1')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]",
            "[resourceId('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName1'))]",
            "[resourceId('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
        ],
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName1'))]"
                        },
                        "subnet": {
                            "id": "[variables('subnetRef')]"
                        }
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('nicName2')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]",
            "[resourceId('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName2'))]",
            "[resourceId('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
        ],
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName2'))]"
                        },
                        "subnet": {
                            "id": "[variables('subnetRef')]"
                        }
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('nicName4')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]",
            "[resourceId('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName4'))]",
            "[resourceId('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
        ],
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName4'))]"
                        },
                        "subnet": {
                            "id": "[variables('subnetRef')]"
                        }
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('nicName6')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]",
            "[resourceId('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName6'))]",
            "[resourceId('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
        ],
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName6'))]"
                        },
                        "subnet": {
                            "id": "[variables('subnetRef')]"
                        }
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('nicName7')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]",
            "[resourceId('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName7'))]",
            "[resourceId('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
        ],
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName7'))]"
                        },
                        "subnet": {
                            "id": "[variables('subnetRef')]"
                        }
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2018-06-01",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('vmName1')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName1'))]"
        ],
        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_DS1_v2"
            },
            "osProfile": {
                "computerName": "[variables('vmName1')]",
                "adminUsername": "[parameters('adminUsername')]",
                "adminPassword": "[parameters('adminPassword')]"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "Canonical",
                    "offer": "UbuntuServer",
                    "sku": "[parameters('LinuxOSVersion')]",
                    "version": "latest"
                },
                "osDisk": {
                    "createOption": "FromImage"
                }
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName1'))]"
                    }
                ]
            }
        }
    },
    {
        "apiVersion": "2018-06-01",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('vmName2')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName2'))]"
        ],
        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_DS1_v2"
            },
            "osProfile": {
                "computerName": "[variables('vmName2')]",
                "adminUsername": "[parameters('adminUsername')]",
                "adminPassword": "[parameters('adminPassword')]"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "MicrosoftWindowsServer",
                    "offer": "WindowsServer",
                    "sku": "[parameters('windowsOSVersion')]",
                    "version": "latest"
                },
                "osDisk": {
                    "createOption": "FromImage"
                }
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName2'))]"
                    }
                ]
            }
        }
    },
    {
        "apiVersion": "2018-06-01",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('vmName4')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName4'))]"
        ],
        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_F4s"
            },
            "osProfile": {
                "computerName": "[variables('vmName4')]",
                "adminUsername": "[parameters('adminUsername')]",
                "adminPassword": "[parameters('adminPassword')]"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "veeam",
                    "offer": "veeam-cloud-connect-enterprise",
                    "sku": "[parameters('VeeamVersion')]",
                    "version": "1.2.0"
                },
                "osDisk": {
                    "createOption": "FromImage"
                }
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName4'))]"
                    }
                ]
            }
        },
        "plan": {
            "name": "veeamcloudcconnectenterprise",
            "publisher": "veeam",
            "product": "veeam-cloud-connect-enterprise"
        }
    },
    {
        "apiVersion": "2018-06-01",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('vmName6')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName6'))]"
        ],
        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_DS2_v2"
            },
            "osProfile": {
                "computerName": "[variables('vmName6')]",
                "adminUsername": "[parameters('adminUsername')]",
                "adminPassword": "[parameters('adminPassword')]"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "MicrosoftWindowsServer",
                    "offer": "WindowsServer",
                    "sku": "[parameters('windowsOSVersion')]",
                    "version": "latest"
                },
                "osDisk": {
                    "createOption": "FromImage"
                }
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName6'))]"
                    }
                ]
            }
        }
    },
    {
        "apiVersion": "2018-06-01",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('vmName7')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName7'))]"
        ],
        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_DS3_v2"
            },
            "osProfile": {
                "computerName": "[variables('vmName7')]",
                "adminUsername": "[parameters('adminUsername')]",
                "adminPassword": "[parameters('adminPassword')]"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "MicrosoftWindowsServer",
                    "offer": "WindowsServer",
                    "sku": "[parameters('windowsOSVersion')]",
                    "version": "latest"
                },
                "osDisk": {
                    "createOption": "FromImage"
                }
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName7'))]"
                    }
                ]
            }
        }
    },
    {
        "type": "Microsoft.Storage/storageAccounts",
        "name": "[variables('storageAccountName')]",
        "apiVersion": "2018-02-01",
        "location": "[resourceGroup().location]",
        "sku": {
            "name": "[parameters('storageAccountType')]"
        },
        "kind": "Storage",
        "properties": {}
    }
],
"outputs": {}
}